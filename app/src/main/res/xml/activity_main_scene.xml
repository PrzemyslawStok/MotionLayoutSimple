<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/catBody"
            android:layout_width="164dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.13"
            app:srcCompat="@drawable/cat_body"
            app:layout_constraintHorizontal_bias="0.25"
            app:transitionEasing="cubic(0.42,0.37,0.8,0.8)" />
        <Constraint
            app:layout_editor_absoluteY="40dp"
            android:layout_height="wrap_content"
            app:layout_editor_absoluteX="173dp"
            android:layout_width="wrap_content"
            android:id="@+id/CatEyeRight" />
        <Constraint
            app:layout_editor_absoluteY="40dp"
            android:layout_height="wrap_content"
            app:layout_editor_absoluteX="209dp"
            android:layout_width="wrap_content"
            android:id="@+id/CatEyeLeft" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/catBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.971"
            app:srcCompat="@drawable/cat_body"
            app:layout_constraintHorizontal_bias="0.919" />
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="5000"
        >
        <OnSwipe
            app:touchAnchorId="@id/catBody"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragDown"
            />
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="2.0"
                android:scaleY="2.0"
                app:motionTarget="@id/catBody"
                app:framePosition="0"
                >
            </KeyAttribute>
            <KeyPosition
                app:keyPositionType="parentRelative"
                app:framePosition="0"
                >
            </KeyPosition>
        </KeyFrameSet>
    </Transition>
</MotionScene>
